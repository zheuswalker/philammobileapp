<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutnotif"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools">

  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
<TextView
    android:layout_marginBottom="20dp"
    android:paddingLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="20dp"
    android:textStyle="bold"
    android:fontFamily="@font/proxima"
    android:text="CONTACT US"
    android:textColor="@color/mainthemecolor"
    />
      <androidx.cardview.widget.CardView
    app:cardBackgroundColor="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/talk"
                />
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Talk to us now"
        android:textSize="20dp"
        android:textColor="@color/colors.comp"
        android:fontFamily="@font/karla"

        />

    <TextView
        android:id="@+id/callph"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="PH: (02) 8 528 2000"
    android:textSize="12dp"
    android:fontFamily="@font/karla"

    />
    <TextView
        android:id="@+id/callpldt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Int PLDT NDD: 1800 10 528 2000"
        android:textSize="12dp"
        android:fontFamily="@font/karla"

        />
</LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          app:cardBackgroundColor="#FAFAFA"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <ImageView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:src="@drawable/email"
                      />
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
                      <TextView
                          android:textColor="@color/colors.comp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Email us"
                          android:textSize="20dp"
                          android:fontFamily="@font/karla"

                          />

                      <TextView
                          android:id="@+id/email"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="philamlife@aia.com"
                          android:textSize="12dp"
                          android:fontFamily="@font/karla"

                          />
                      <TextView
                          android:visibility="invisible"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Int PLDT NDD: 1800 10 528 2000"
                          android:textSize="12dp"
                          android:fontFamily="@font/karla"

                          />
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>

      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/locatenow"
          app:cardBackgroundColor="#FAFAFA"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <ImageView
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:src="@drawable/locate"
                      />
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
                      <TextView
                          android:textColor="@color/colors.comp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Talk to us now"
                          android:textSize="20dp"
                          android:fontFamily="@font/karla"

                          />

                      <TextView
                          android:id="@+id/locate"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Find the nearest branch"
                          android:textSize="12dp"
                          android:fontFamily="@font/karla"

                          />
                      <TextView
                          android:visibility="invisible"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Int PLDT NDD: 1800 10 528 2000"
                          android:textSize="12dp"
                          android:fontFamily="@font/karla"

                          />
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>

      </androidx.cardview.widget.CardView>


      <TextView
          android:textColor="@color/mainthemecolor"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="GO TO"
          />

      <TextView
          android:layout_marginBottom="10dp"
          android:id="@+id/philamvital"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="PHILAM VITALITY"
          android:textColor="@color/colors.comp"
          />
      <TextView
          android:id="@+id/pami"
          android:layout_marginBottom="10dp"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="PAMI"
          android:textColor="@color/colors.comp"
          />
      <TextView
          android:id="@+id/bpiphilam"
          android:layout_marginBottom="10dp"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="BPI-PHILAM"
          android:textColor="@color/colors.comp"
          />
      <TextView
          android:id="@+id/aia"
          android:layout_marginBottom="10dp"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="AIA.COM"
          android:textColor="@color/colors.comp"
          />

      <TextView
          android:layout_marginTop="50dp"
          android:textAlignment="center"
          android:layout_marginBottom="10dp"
          android:paddingLeft="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="12dp"
          android:textStyle="bold"
          android:fontFamily="@font/proxima"
          android:text="Copyright © 2015, AIA Group Limited and its subsidiaries. All rights reserved."
          android:textColor="@color/mainthemecolor"
          />
  </LinearLayout>

</androidx.core.widget.NestedScrollView>
