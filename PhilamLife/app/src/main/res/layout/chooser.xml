<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_marginBottom="40dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/tittle"
    android:textSize="25dp"
    android:textColor="@color/black"
    android:layout_marginTop="20dp"
    android:textAlignment="center"
    ></TextView>
    <ImageView
        android:layout_marginTop="10dp"
        android:background="@drawable/philam_life_logo"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        ></ImageView>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:gravity="center">
    <Button
        android:textColor="#fff"
    android:id="@+id/login"
    android:background="@drawable/background_button"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:text="Log In"></Button>
</LinearLayout>
    <TextView

        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="- or -"

        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <Button
            android:id="@+id/signup"
            android:background="@drawable/signup_backgroundbtn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"></Button>
        <Button
            android:id="@+id/signupwithfacebook"
            android:backgroundTint="@color/colors.comp"
            android:background="@drawable/signup_backgroundbtn"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Sign Up With Facebook"></Button>

    </LinearLayout>
</LinearLayout>