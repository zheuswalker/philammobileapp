                        android:textSize="15dp" />


                    <CheckBox
                        android:id="@+id/f"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="20dp"
                       android:background="@drawable/critical_protect100"
                        android:src="@drawable/critical_protect100"></CheckBox>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:text="P 58,000.00"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:text="AIA CRITICAL PROTECTION 100"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/future_tittle"
                        android:textAlignment="textStart"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/aia_critical_protect_100"
                        android:textAlignment="textStart"
                        android:textSize="15dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:text="OPTION"
                        android:textAlignment="center"
                        android:textSize="25dp" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="10dp"
                            android:paddingHorizontal="20dp"
                            android:text="TOTAL"
                            android:textAlignment="textStart"
                            android:textSize="25dp"
                            android:textStyle="bold|italic" />

                        <TextView

                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="10dp"
                            android:text="00.00"

                            android:textAlignment="textEnd"
                            android:textSize="25dp" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:paddingTop="30dp"
                android:text="Copyright Â© 2015 \n AIA Group Limited and its subsidiaries. \n All rights reserved."
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textStyle="bold" />


        </LinearLayout>
