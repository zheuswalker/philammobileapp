    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fulldetailsscroll"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                app:controller_layout_id="@layout/layout_exoplayerlayoutfeed"
                android:id="@+id/exoplayer"
                />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/market_product_view_name"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ProductName"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="#6c6b6b"
                                />
                            <TextView

                                android:id="@+id/market_product_view_price"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#6c6b6b"
                                />
                            <TextView

                                android:id="@+id/market_product_seller"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#6c6b6b"
                                />
                        </LinearLayout>




                    </LinearLayout>


                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    android:id="@+id/cashin"
                    android:elevation="2dp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                  <Button
                      android:id="@+id/fullpayment"
                      android:textColor="#fff"
                      android:background="@color/colors.comp"
                      android:text="FULL (P1,000,000)"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="match_parent" />
                        <Button
                            android:id="@+id/microinsur"
                            android:textColor="#fff"
                            android:background="@color/mainthemecolor"
                            android:text="MicroInsurance (P900)"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
